<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.rajbaba.smsapp.Messagepage">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/msg"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/btnsend"
        android:layout_below="@+id/txtuser"
        android:hint="WRITE YOUR MESSAGE HERE ONLI IF YOU WANT TO SMS/WHATSAPP :)"
        android:textColorHint="#da2828" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SMS"
        android:id="@+id/btnsend"
        android:background="@android:color/transparent"
        android:textSize="20dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/btnhome" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EMAIL"
        android:id="@+id/btnmail"
        android:background="@android:color/transparent"
        android:textSize="20dp"
        android:layout_below="@+id/msg"
        android:layout_toEndOf="@+id/btnsend" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txtuser"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/msg"
        android:layout_alignParentStart="true"
        android:hint="Your Name Please"
        android:textSize="25dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login page"
        android:id="@+id/btnhome"
        android:background="@android:color/transparent"
        android:textSize="15dp"
        android:layout_below="@+id/msg"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share"
        android:id="@+id/btnshare"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/msg"
        android:layout_toEndOf="@+id/btnmail"
        android:background="@android:color/transparent"
        android:textSize="20dp"
        android:textColor="#f40882" />

</RelativeLayout>
